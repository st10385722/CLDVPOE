@model IEnumerable<CLDV6211POE.Models.Products>

@{
    ViewData["Title"] = "Products";
}
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/js/site.js"></script>
<div>
    <h1 style="margin: 0">@ViewData["Title"]</h1>
    <input type="text" id="search" placeholder="Search" class="searchbox">
</div>

<div id="allProducts" style="display: none;">
    @foreach (var product in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card" style="background-color: #252525">
                <div class="card-body text-center">
                    <h5 class="card-title">@product.ProductName</h5>
                    <a asp-controller="MyWork" asp-action="Details" asp-route-id="@product.ProductId">
                        <img src="/images/products/@product.ImageFileName" class="img-fluid product-image" alt="@product.ProductName" />
                    </a>
                    <p class="card-text mt-2" style="color:white; font-size:30px">@product.ProductPrice.ToString("C")</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card" style="background-color: #252525">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.ProductName</h5>
                        <a asp-controller="MyWork" asp-action="Details" asp-route-id="@product.ProductId">
                            <img src="/images/products/@product.ImageFileName" class="img-fluid product-image" alt="@product.ProductName" />
                        </a>
                        <p class="card-text mt-2" style="color:white; font-size:30px">@product.ProductPrice.ToString("C")</p>
                        <input type="hidden" id="product-category" value="@product.ProductCategory" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 2px solid #BB86FC;
        border-radius: 5px;
        padding: 15px;
    }
    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }
    .card-text {
        font-size: 1.1rem;
        color: #555;
    }
    .img-fluid {
        max-height: 200px;
        max-width: 100%;
        object-fit: cover;
        border: 2px solid #000000;
    }
    .searchbox{
        border-radius: 15px;
        border: 2px #BB86FC solid;
        padding: 5px 5px 5px 25px;
        width: 500px;
        height:35px;
        background:#252525;
        color: white;
    }
</style>

<script>
    $(document).ready(function () {
        $("#search").keyup(function () {
            var searchTerm = $(this).val();
            searchProducts(searchTerm);
        });
    });
</script>

